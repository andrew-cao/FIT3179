{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 500,
  "height": 300,
  "title": "Electric power consumption (kWh per capita)",
  "data": {
    "url": "https://raw.githubusercontent.com/andrew-cao/FIT3179/main/data/dataset.csv"
  },
  "transform": [
    {"filter": "datum.power_consumption > 0 & datum.life_expectancy > 0"}
  ],
  "layer": [
    {
      "mark": {"type": "circle", "color": "#907b0e"},
      "encoding": {
        "x": {
          "field": "power_consumption",
          "title": "Electric power consumption (kWh per capita, log scale)",
          "type": "quantitative",
          "scale": {"type": "log"},
          "axis": {"grid": false}
        },
        "y": {
          "field": "life_expectancy",
          "title": "Life expectancy",
          "type": "quantitative",
          "axis": {"grid": false}
        },
        "tooltip": [
          {"field": "Country", "type": "nominal"},
          {
            "field": "life_expectancy",
            "title": "Life expectancy",
            "type": "quantitative"
          },
          {
            "field": "power_consumption",
            "title": "Electric power consumption",
            "type": "quantitative"
          }
        ]
      }
    }
  ],
  "config": {}
}
