{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 800,
  "height": 500,
  "title": "Urban population (% population)",
  "data": {
    "url": "https://raw.githubusercontent.com/andrew-cao/FIT3179/main/data/dataset.csv"
  },
  "transform": [{"filter": "datum.urban_pop > 0 & datum.life_expectancy > 0"}],
  "layer": [
    {
      "mark": {"type": "circle", "color": "#126cb0"},
      "encoding": {
        "x": {
          "field": "urban_pop",
          "title": "Urban population (% population)",
          "type": "quantitative",
          "axis": {"grid": false}
        },
        "y": {
          "field": "life_expectancy",
          "title": "Life expectancy",
          "type": "quantitative",
          "axis": {"grid": false}
        },
        "tooltip": [
          {"field": "Country", "type": "nominal"},
          {
            "field": "life_expectancy",
            "title": "Life expectancy",
            "type": "quantitative"
          },
          {
            "field": "urban_pop",
            "title": "Urban population",
            "type": "quantitative"
          }
        ]
      }
    }
  ],
  "config": {}
}