{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 800,
  "height": 500,
  "title": "Net migration (as % total population)",
  "projection": {"type": "equalEarth"},
  "data": {
    "url": "https://raw.githubusercontent.com/andrew-cao/FIT3179/main/js/world.topo.json",
    "format": {"type": "topojson", "feature": "custom"}
  },
  "transform": [
    {
      "lookup": "properties.name",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/andrew-cao/FIT3179/main/data/dataset.csv"
        },
        "key": "Country",
        "fields": ["net_migration_percent", "life_expectancy"]
      }
    }
  ],
  "mark": {"type": "geoshape"},
  "encoding": {
    "color": {
      "condition": {
        "test": "datum.net_migration_percent == 0",
        "value": "grey"
      },
      "field": "net_migration_percent",
      "title": "Net migration (%)",
      "type": "quantitative",
      "scale": {"type": "linear", "scheme": "blueorange", "reverse": true}
    },
    "tooltip": [
      {"field": "properties.name", "type": "nominal", "title": "Country"},
      {
        "field": "life_expectancy",
        "title": "Life expectancy",
        "type": "quantitative"
      },
      {
        "field": "net_migration_percent",
        "title": "Net migration (%)",
        "type": "quantitative"
      }
    ]
  },
  "config": {}
}