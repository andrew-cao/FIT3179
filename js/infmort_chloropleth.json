{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 500,
  "height": 300,
  "title": "Infant mortality (per 1000 births)",
  "projection": {"type": "equalEarth"},
  "data": {
    "url": "https://raw.githubusercontent.com/andrew-cao/FIT3179/main/js/world.topo.json",
    "format": {"type": "topojson", "feature": "custom"}
  },
  "transform": [
    {
      "lookup": "properties.name",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/andrew-cao/FIT3179/main/data/dataset.csv"
        },
        "key": "Country",
        "fields": ["inf_mort", "life_expectancy"]
      }
    }
  ],
  "mark": {"type": "geoshape"},
  "encoding": {
    "color": {
      "condition": {"test": "datum.inf_mort == 0", "value": "grey"},
      "field": "inf_mort",
      "title": "Infant mortality",
      "type": "quantitative",
      "legend": {"values": [2, 10, 60]},
      "scale": {"type": "log", "scheme": "browns", "reverse": true}
    },
    "tooltip": [
      {"field": "properties.name", "type": "nominal", "title": "Country"},
      {
        "field": "life_expectancy",
        "title": "Life expectancy",
        "type": "quantitative"
      },
      {"field": "inf_mort", "title": "Infant mortality", "type": "quantitative"}
    ]
  },
  "config": {}
}